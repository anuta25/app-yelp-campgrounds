<% layout("layouts/boilerplate") %>
        <h1>New Campground</h1>
        <form action="/campgrounds" method="POST">
             <div>
                 <label for="title">Enter title</label>
                 <input type="text" id="title" name="campground[title]" placeholder="enter a name">
             </div>
             <div>
                <label for="location">Enter location</label>
                <input type="text" id="location" name="campground[location]" placeholder="enter location">
             </div>
        <button>Add Campground</button>
        </form>
        <a href="/campgrounds">Back to Campgrounds</a>

    